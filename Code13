/**
 * FINAL â€” filesystem-v2 SAFE, n8n-version COMPATIBLE
 * Works with HTTP Request (Response = File)
 * Outlook-safe inline CID images
 */

const items = $input.all();

let htmlParts = [];
let binary = {};
let index = 0;

for (let i = 0; i < items.length; i++) {
  const item = items[i];

  if (!item.binary) continue;

  const binaryKeys = Object.keys(item.binary);
  if (binaryKeys.length === 0) continue;

  const binKey = binaryKeys[0];

  // ðŸ”´ CORRECT helper for YOUR n8n version
  const buffer = await this.helpers.binary.getBinaryDataBuffer(
    i,
    binKey
  );

  if (!buffer || buffer.length < 100) {
    console.log('Empty buffer for item', i);
    continue;
  }

  const cid = `img${index}@mail`;
  const outKey = `image_${index}`;

  binary[outKey] = {
    data: buffer.toString('base64'),   // REAL base64
    mimeType: item.binary[binKey].mimeType || 'image/png',
    fileName: item.binary[binKey].fileName || `grafana-${index}.png`,
    cid,
    disposition: 'inline'
  };

  htmlParts.push(`
    <div style="margin:16px 0">
      <img src="cid:${cid}" style="max-width:100%; display:block;" />
    </div>
  `);

  index++;
}

if (index === 0) {
  throw new Error('No valid images loaded from filesystem-v2');
}

return [
  {
    json: {
      subject: 'Grafana Dashboard Report',
      html: `
        <html>
          <body style="font-family:Arial,sans-serif">
            <h2>ðŸ“Š Grafana Dashboard</h2>
            ${htmlParts.join('')}
            <hr />
            <div style="font-size:12px;color:#666">
              This email was sent automatically with n8n
            </div>
          </body>
        </html>
      `
    },
    binary
  }
];
